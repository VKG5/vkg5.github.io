---
import BaseLayout from './BaseLayout.astro';
import { formatDate, getReadingTime } from '@/lib/utils';
import Tag from '@/components/common/Tag.astro';
import TableOfContents from '@/components/blog/TableOfContents.astro';

interface Props {
  title: string;
  description: string;
  publishedAt: Date;
  updatedAt?: Date;
  category: string;
  tags?: string[];
  series?: string;
  seriesOrder?: number;
  cover?: string;
  headings: { depth: number; slug: string; text: string }[];
}

const {
  title,
  description,
  publishedAt,
  updatedAt,
  category,
  tags = [],
  series,
  seriesOrder,
  cover,
  headings,
} = Astro.props;

const content = await Astro.slots.render('default');
const readingTime = getReadingTime(content);
---

<BaseLayout title={title} description={description} image={cover} article>
  <article class="py-12 md:py-20">
    <!-- Header -->
    <header class="container-narrow mb-12">
      <div class="flex items-center gap-3 text-sm text-text-tertiary mb-4">
        <a href={`/blog/category/${category}`} class="link capitalize">
          {category.replace('-', ' ')}
        </a>
        <span>·</span>
        <time datetime={publishedAt.toISOString()}>
          {formatDate(publishedAt)}
        </time>
        <span>·</span>
        <span>{readingTime} min read</span>
      </div>
      
      <h1 class="heading-1 mb-6">{title}</h1>
      
      <p class="lead mb-6">{description}</p>
      
      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {tags.map((tag) => (
            <Tag>{tag}</Tag>
          ))}
        </div>
      )}
      
      {updatedAt && (
        <p class="mt-6 text-sm text-text-tertiary">
          Last updated: {formatDate(updatedAt)}
        </p>
      )}
    </header>
    
    <!-- Cover image -->
    {cover && (
      <div class="container mb-12">
        <img
          src={cover}
          alt={title}
          class="w-full rounded-xl border border-border"
        />
      </div>
    )}
    
    <!-- Content with TOC -->
    <div class="container relative">
      <!-- Main content (centered) -->
      <div class="max-w-3xl mx-auto">
        <div class="prose-custom">
          <slot />
        </div>
      </div>
      
      <!-- Sidebar TOC (desktop, fixed positioned on right) -->
      {headings.length > 0 && (
        <aside id="toc-sidebar" class="hidden xl:block fixed right-8 top-32 w-64 overflow-y-auto no-scrollbar pb-8 transition-all duration-200" style="max-height: calc(100vh - 10rem);">
          <TableOfContents headings={headings} />
        </aside>
      )}
    </div>
    
    <!-- Post footer -->
    <footer class="container-narrow mt-16 pt-8 border-t border-border">
      <div class="flex items-center justify-between">
        <a href="/blog" class="link-underline text-text-secondary hover:text-text-primary">
          ← Back to Blog
        </a>
        
        <div class="flex items-center gap-4">
          <span class="text-sm text-text-tertiary">Share:</span>
          <a
            href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(Astro.url.href)}&text=${encodeURIComponent(title)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-text-secondary hover:text-text-primary transition-colors"
            aria-label="Share on Twitter"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
            </svg>
          </a>
          <a
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-text-secondary hover:text-text-primary transition-colors"
            aria-label="Share on LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
            </svg>
          </a>
        </div>
      </div>
    </footer>
  </article>
</BaseLayout>

<script>
  // Handle TOC sidebar positioning to avoid footer overlap
  function initTocPositioning() {
    const toc = document.getElementById('toc-sidebar');
    const footer = document.querySelector('footer.border-t');
    
    if (!toc || !footer) return;
    
    const topOffset = 128; // top-32 = 8rem = 128px
    const bottomPadding = 32; // Extra padding from footer
    
    function updateTocPosition() {
      const footerRect = footer.getBoundingClientRect();
      const viewportHeight = window.innerHeight;
      
      // Calculate available height
      // If footer is visible, limit the TOC height
      if (footerRect.top < viewportHeight) {
        const availableHeight = footerRect.top - topOffset - bottomPadding;
        toc.style.maxHeight = `${Math.max(availableHeight, 100)}px`;
      } else {
        // Footer not visible, use full available space
        toc.style.maxHeight = `calc(100vh - 10rem)`;
      }
    }
    
    // Run on scroll and resize
    window.addEventListener('scroll', updateTocPosition, { passive: true });
    window.addEventListener('resize', updateTocPosition, { passive: true });
    
    // Initial call
    updateTocPosition();
  }
  
  // Run when DOM is ready
  document.addEventListener('DOMContentLoaded', initTocPositioning);
  // Also run for Astro view transitions
  document.addEventListener('astro:page-load', initTocPositioning);
</script>
