---
import Tag from '@/components/common/Tag.astro';

interface Props {
  title: string;
  description: string;
  cover: string;
  technologies: string[];
  href: string;
  featured?: boolean;
}

const { title, description, cover, technologies, href, featured } = Astro.props;
---

<article class="group">
  <a href={href} class="block card card-hover p-0 overflow-hidden">
    <!-- Image -->
    <div class="aspect-video overflow-hidden bg-bg-tertiary">
      <img
        src={cover}
        alt={title}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
        loading="lazy"
      />
    </div>
    
    <!-- Content -->
    <div class="p-6">
      {featured && (
        <div class="flex items-center gap-2 mb-3">
          <span class="text-xs font-medium text-accent bg-accent/10 px-2 py-0.5 rounded">
            Featured
          </span>
        </div>
      )}
      
      <h3 class="text-xl font-semibold text-text-primary mb-2 group-hover:text-accent transition-colors">
        {title}
      </h3>
      
      <p class="text-text-secondary line-clamp-2 mb-4">
        {description}
      </p>
      
      <div class="flex flex-wrap gap-2">
        {technologies.slice(0, 4).map((tech) => (
          <Tag>{tech}</Tag>
        ))}
      </div>
    </div>
  </a>
</article>
