---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/common/Button.astro';
import PostCard from '@/components/blog/PostCard.astro';
import ProjectCard from '@/components/projects/ProjectCard.astro';
import Tag from '@/components/common/Tag.astro';
import { getCollection } from 'astro:content';
import { sortByDate, filterDrafts, getReadingTime } from '@/lib/utils';

// Get latest posts
const allPosts = await getCollection('blog');
const posts = sortByDate(filterDrafts(allPosts)).slice(0, 3);

// Get featured projects
const allProjects = await getCollection('projects');
const featuredProjects = allProjects.filter((p) => p.data.featured).slice(0, 3);

// Expertise areas
const expertise = [
  {
    title: 'Procedural Generation',
    description: 'Creating systems that generate content algorithmically‚Äîterrain, vegetation, architecture, and more.',
    icon: '‚óá',
  },
  {
    title: 'Tool Development',
    description: 'C++, Python, Unreal, DCCs ‚Äî if something slows artists down, I automate it. If it‚Äôs already fast, I make it faster.',
    icon: '‚óà',
  },
  {
    title: 'Technical Art (The Fun Glue Layer)',
    description: 'Shaders, materials, rigs, and real-time systems ‚Äî all the engineering that lives between ‚Äúthis looks cool‚Äù and ‚Äúit runs at 60 FPS.‚Äù',
    icon: '‚óÜ',
  },
];
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="section relative overflow-hidden">
    <!-- Aurora background effect -->
    <div class="aurora-background">
      <div class="aurora-blob aurora-blob-1"></div>
      <div class="aurora-blob aurora-blob-2"></div>
      <div class="aurora-blob aurora-blob-3"></div>
    </div>
    
    <div class="container relative">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="heading-1 mb-6" data-animate>
          Varun Kumar Gupta
        </h1>
        
        <p class="text-xl md:text-2xl text-text-secondary mb-4" data-animate>
          Graphics Engineer & Technical Artist
        </p>
        
        <p class="lead mb-8 max-w-2xl mx-auto" data-animate>
            I build smart systems, fast tools, and procedural magic ‚Äî powered by code, sometimes sprinkled with AI, and always designed <em>"Artists First, AI Later"</em>.
        </p>
        
        <div class="flex flex-wrap items-center justify-center gap-4 mb-12" data-animate>
          <Button href="/blog" variant="primary">Read Blog</Button>
          <Button href="/projects" variant="secondary">View Projects</Button>
        </div>
        
        <div class="flex items-center justify-center gap-4 text-sm text-text-tertiary mb-8" data-animate>
          <span>Broke pipelines.</span>
          <span>Fixed pipelines.</span>
          <span>Automated pipelines.</span>
        </div>
        
        <div class="flex items-center justify-center gap-4 text-sm text-text-tertiary" data-animate>
          <span>Currently:</span>
          <span class="text-text-secondary">Technical Artist @ ZITRO</span>
        </div>
        <div class="flex items-center justify-center gap-4 text-sm text-text-tertiary" data-animate>
          <span>Previously:</span>
          <span class="text-text-secondary">Rockstar Games/Electronic Arts @ Technicolor Games</span>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Expertise Section -->
  <section class="section-sm bg-bg-secondary border-y border-border">
    <div class="container">
      <div class="grid md:grid-cols-3 gap-8">
        {expertise.map((item, index) => (
          <div class="text-center md:text-left" data-animate style={`animation-delay: ${index * 100}ms`}>
            <div class="text-2xl text-accent mb-4">{item.icon}</div>
            <h3 class="text-lg font-semibold text-text-primary mb-2">{item.title}</h3>
            <p class="text-text-secondary text-sm">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Latest Articles -->
  <section class="section">
    <div class="container">
      <div class="flex items-center justify-between mb-10">
        <h2 class="heading-3">Latest Articles</h2>
        <a href="/blog" class="link-underline text-text-secondary hover:text-text-primary text-sm">
          View All ‚Üí
        </a>
      </div>
      
      {posts.length > 0 ? (
        <div class="relative">
          <div class="overflow-x-auto pb-4 no-scrollbar">
            <div class="flex gap-8 min-w-max">
              {posts.map((post) => {
                const date = new Date(post.data.publishedAt);
                const formattedDate = date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
                return (
                  <a href={`/blog/${post.slug}`} class="flex-shrink-0 w-80 group">
                    <div class="relative pl-8 pb-8 border-l-2 border-border group-hover:border-accent transition-colors">
                      <div class="absolute left-0 top-0 w-4 h-4 -ml-2 rounded-full bg-accent border-4 border-bg-primary"></div>
                      <div class="text-xs text-text-tertiary mb-2">{formattedDate}</div>
                      <h3 class="text-lg font-semibold text-text-primary group-hover:text-accent transition-colors mb-2">{post.data.title}</h3>
                      <div class="inline-block px-2 py-1 text-xs rounded bg-accent/10 text-accent">{post.data.category}</div>
                    </div>
                  </a>
                );
              })}
            </div>
          </div>
        </div>
      ) : (
        <div class="card text-center py-12">
          <p class="text-text-tertiary mb-4">No articles yet. Check back soon!</p>
          <p class="text-sm text-text-tertiary">
            In the meantime, explore my <a href="/projects" class="link">projects</a>.
          </p>
        </div>
      )}
    </div>
  </section>
  
  <!-- Featured Projects -->
  <section class="section bg-bg-secondary border-y border-border">
    <div class="container">
      <div class="flex items-center justify-between mb-10">
        <h2 class="heading-3">Featured Projects</h2>
        <a href="/projects" class="link-underline text-text-secondary hover:text-text-primary text-sm">
          All Projects ‚Üí
        </a>
      </div>
      
      {featuredProjects.length > 0 ? (
        <div class="relative">
          <div class="overflow-x-auto pb-4 no-scrollbar">
            <div class="flex gap-8 min-w-max">
              {featuredProjects.map((project) => {
                const date = new Date(project.data.publishedAt);
                const formattedDate = date.toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
                return (
                  <a href={`/projects/${project.slug}`} class="flex-shrink-0 w-80 group">
                    <div class="relative pl-8 pb-8 border-l-2 border-border group-hover:border-accent transition-colors">
                      <div class="absolute left-0 top-0 w-4 h-4 -ml-2 rounded-full bg-accent border-4 border-bg-primary"></div>
                      <div class="text-xs text-text-tertiary mb-2">{formattedDate}</div>
                      <h3 class="text-lg font-semibold text-text-primary group-hover:text-accent transition-colors mb-2">{project.data.title}</h3>
                      <div class="flex flex-wrap gap-2">
                        {project.data.technologies.slice(0, 3).map((tech) => (
                          <span class="inline-block px-2 py-1 text-xs rounded bg-accent/10 text-accent">{tech}</span>
                        ))}
                      </div>
                    </div>
                  </a>
                );
              })}
            </div>
          </div>
        </div>
      ) : (
        <div class="card text-center py-12">
          <p class="text-text-tertiary">Projects coming soon!</p>
        </div>
      )}
    </div>
  </section>
  
  <!-- About Preview -->
  <section class="section">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <div class="flex flex-col md:flex-row items-start gap-8" data-animate>
          <!-- Avatar placeholder -->
          <div class="w-24 h-24 rounded-xl bg-bg-tertiary border border-border flex-shrink-0 flex items-center justify-center">
            <span class="text-3xl">üë§</span>
          </div>
          
          <div>
            <h2 class="heading-4 mb-4">Hi, I'm Varun ü¶ß</h2>
            <p class="text-text-secondary mb-4">
              I‚Äôm a Graphics Engineer and Technical Artist working on procedural generation, 
              real-time systems, and the pipelines that keep creative teams moving fast.
              I build the behind-the-scenes tech that turns ideas into scalable workflows 
              and empowers creative teams.
            </p>
            <p class="text-text-secondary mb-6">
              I‚Äôm deep into tool development, AI-assisted procedural systems, and experimenting 
              with new ways to generate landscapes, assets, and entire worlds through code. I 
              write about the space where engineering meets creativity ‚Äî and how smarter 
              tools make better art.
            </p>
            <Button href="/about" variant="ghost">More About Me ‚Üí</Button>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
