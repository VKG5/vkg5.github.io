{
  "$ref": "#/definitions/projects",
  "definitions": {
    "projects": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "publishedAt": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "status": {
          "type": "string",
          "enum": [
            "completed",
            "in-progress",
            "archived"
          ]
        },
        "category": {
          "type": "string",
          "enum": [
            "tool",
            "research",
            "experiment",
            "client"
          ]
        },
        "technologies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "links": {
          "type": "object",
          "properties": {
            "github": {
              "type": "string",
              "format": "uri"
            },
            "demo": {
              "type": "string",
              "format": "uri"
            },
            "download": {
              "type": "string",
              "format": "uri"
            }
          },
          "additionalProperties": false
        },
        "cover": {
          "type": "string"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "description",
        "publishedAt",
        "status",
        "category",
        "technologies",
        "cover"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}