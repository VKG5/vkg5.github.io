{
  "$ref": "#/definitions/blog",
  "definitions": {
    "blog": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string",
          "maxLength": 160
        },
        "publishedAt": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "updatedAt": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "category": {
          "type": "string",
          "enum": [
            "procedural-generation",
            "technical-art",
            "tool-development",
            "unreal-engine",
            "shaders",
            "houdini",
            "blender",
            "research"
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "series": {
          "type": "string"
        },
        "seriesOrder": {
          "type": "number"
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "draft": {
          "type": "boolean",
          "default": false
        },
        "cover": {
          "type": "string"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "description",
        "publishedAt",
        "category"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}